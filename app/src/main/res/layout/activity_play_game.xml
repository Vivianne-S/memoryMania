<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#075D92">

    <!-- Good Luck, Have Fun Text -->
    <TextView
        android:id="@+id/gl_hfText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/gl_hf"
        android:textColor="#FE5900"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/timer_label"
        android:textColor="#FE5900"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/gl_hfText"
        app:layout_constraintTop_toBottomOf="@id/gl_hfText" />

    <!-- 4x4 GridLayout fÃ¶r images -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/timer_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:rowCount="2"

        android:layout_margin="8dp">

        <!-- Image 1 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:src="@drawable/image1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:contentDescription="@string/image1_desc"/>

        <!-- Image 2 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:src="@drawable/image2"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:contentDescription="@string/image2_desc"/>

        <!-- Image 3 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:src="@drawable/image3"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:contentDescription="@string/image3_desc"/>

        <!-- Image 4 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:src="@drawable/image4"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:contentDescription="@string/image4_desc"/>

        <!-- Image 5 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:src="@drawable/image5"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:contentDescription="@string/image5_desc"/>

        <!-- Image 6 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:src="@drawable/image6"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:contentDescription="@string/image6_desc"/>

        <!-- Image 7 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:src="@drawable/image7"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:contentDescription="@string/image7_desc"/>

        <!-- Image 8 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:src="@drawable/image8"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:contentDescription="@string/image8_desc"/>
    </GridLayout>

<!-- Reset Game Button -->
<Button
    android:id="@+id/resetGameButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/reset_game"
    app:layout_constraintTop_toBottomOf="@+id/gridLayout"
    app:layout_constraintStart_toStartOf="@id/gridLayout"
    android:backgroundTint="#FE5900"
    android:textColor="#FFFFFF"/>

    <!-- Back to Menu Button -->
<Button
    android:id="@+id/back_to_menu_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/back_to_menu"
    app:layout_constraintTop_toBottomOf="@+id/gridLayout"
    app:layout_constraintStart_toEndOf="@id/gridLayout"
    android:backgroundTint="#FE5900"
    android:textColor="#FFFFFF"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
