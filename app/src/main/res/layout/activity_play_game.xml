<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#075D92"
    android:padding="16dp">

    <!-- Good Luck, Have Fun Text -->
    <TextView
        android:id="@+id/gl_hfText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/gl_hf"
        android:textColor="#FE5900"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridLayout"/>

    <TextView
        android:id="@+id/timer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/timer_label"
        android:textColor="#FE5900"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/gl_hfText"
        app:layout_constraintTop_toBottomOf="@id/gl_hfText" />

    <!-- 4x4 GridLayout for images -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timer_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reset_game_button"
        android:layout_marginTop="30dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:rowCount="4"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:gravity="center">

        <!-- Image 1 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:contentDescription="@string/image1_desc"
            android:src="@drawable/card_back"/>

        <!-- Image 2 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:contentDescription="@string/image2_desc"
            android:src="@drawable/card_back"/>

        <!-- Image 3 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:contentDescription="@string/image3_desc"
            android:src="@drawable/card_back"/>

        <!-- Image 4 -->
